@using MyClass.Models;
@{
    ViewBag.Title = "ThongTinKhachHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Product>

<div class=" container" style="padding-top:30px;">
    <div class="row">
        <div class="col">
            <p style="font-weight:bold;font-size:x-large;"><h3 style="color:blue;">@ViewBag.name.Role</h3></p>
            <hr /><br /><br />

            <table class="table">
                <tr>
                    <td style=" font-weight: bold">Tên: </td>
                    <td>@ViewBag.name.Name</td>
                </tr>
                <tr>
                    <td style=" font-weight: bold">Số điện thoại:</td>
                    <td>@ViewBag.name.Phone</td>
                </tr>
                <tr>
                    <td style=" font-weight: bold">Email:</td>
                    <td>@ViewBag.name.Email</td>
                </tr>
                <tr>
                    <td style=" font-weight: bold">Địa chỉ:</td>
                    <td>@ViewBag.name.Address</td>
                </tr>
            </table>
            <br /><br /><hr /><br /><br />
            <a href="~/home/DangXuat" class="btn btn-success">
                Đăng Xuất
            </a>
        </div>
        <div class="col">
            <h2 style="text-align:center">Lịch Sử Mua Của Bạn</h2>
            <div class="card border-dark table-responsive">
                <table style="text-align: center; margin: 10px;">
                    <tr>
                        <th>TÊN SẢN PHẨM</th>
                        <th>ẢNH BÌA</th>
                        <th colspan="2">SỐ LƯỢNG</th>
                        <th>ĐƠN GIÁ</th>
                        <th colspan="2">THÀNH TIỀN</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="26%">@item.ProductName</td>
                            <td width="22%"><img src="~/Content/img/product/@item.MetaKeywords/@item.ProductImage" width="50%"></td>
                            <td width="22%" colspan="2">@item.Quantity</td>
                            <td width="12%">@String.Format("{0:0,0}", item.PromotionPrice)</td>
                            <td width="22%" colspan="2">@String.Format("{0:0,0}", item.PromotionPrice * item.Quantity)</td>
                        </tr>
                        <tr></tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>










