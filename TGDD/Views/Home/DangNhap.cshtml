<script src="https://maxcdn.bootstrapcdn.com/bootstrap.min.js"></script>

<form action="~/Home/DangNhap" method="post" style="width:30%; margin:0 auto">
    <!-- User input -->
    <div class="form-outline mb-4 ">
        <label class="form-label" for="form2Example1">Tên đăng nhập</label>
        <input type="text" name="username" id="username" class="form-control" />
        
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <label class="form-label" for="form2Example2">Password</label>
        <input type="password" name="password" id="password" class="form-control" />

    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="checkboxMK" checked />
                <label class="form-check-label" for="form2Example31"> Nhớ mật khẩu </label>
            </div>
        </div>
        <div >
            <span style="color:red">@ViewBag.ErrorMessage</span>
        </div>
        <div class="col">
            <!-- Simple link -->
            <a href="#!">Bạn quên mật khẩu?</a>
        </div>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary">Đăng nhập</button>

    <!-- Register buttons -->
    
</form>
