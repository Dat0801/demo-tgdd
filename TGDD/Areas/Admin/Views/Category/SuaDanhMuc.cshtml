
@{
    ViewBag.Title = "Sửa Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

@model MyClass.Models.Category
<center><h2>Sửa Danh Mục</h2></center>
<form action="/Admin/Category/SuaDanhMuc?CatID=@ViewBag.CatID" method="post">
    <div style="width: 70%; margin-left: 50px">
        @if (ViewBag.result == 1)
        {
            <h5 style="color:greenyellow">Sửa thành công</h5>
        }
        <div>
            Tên danh mục
            <br />
            <input type="text" name="CatName" class="form-control" value="@Model.CatName" /><br />
        </div>
        <div>
            Hình ảnh danh mục <br />
            <img src="~/Content/img/logo/@Model.CategoryImage" width="50"/>
            <br />
            <br />
            <input type="text" name="CategoryImage" class="form-control" value="@Model.CategoryImage" />
        </div>
        <br />
        <div>
            Seotitle
            <input type="text" name="SeoTitle" class="form-control" value="@Model.SeoTitle"/>
        </div>
        <br />
        <div>
            CreatedBy
            <select class="form-control" name="CreatedBy">
                @foreach (var user in ViewBag.listUser)
                {
                    if (Model.CreatedBy == @user.UserName)
                    {
                        <option value="@user.UserName" selected>
                            @user.UserName
                        </option>
                    }
                    else
                    {
                        <option value="@user.UserName">
                            @user.UserName
                        </option>
                    }

                }

            </select>
        </div>
        <br />
        <div style="width:25%;">
            Active
            <select class="form-control" name="Active">
                @if (@Model.Active)
                {
                    <option value="true" selected>True</option>
                    <option value="false">False</option>
                }
                else
                {
                    <option value="true">True</option>
                    <option value="false" selected>False</option>
                }
            </select>
        </div>

        <div>
            <center><button type="submit" class="btn btn-success">Sửa</button></center>
        </div>
    </div>
</form>
<h5><a href="/Admin/Category/XemDanhMuc" style="margin-left: 50px;">Trở lại trang danh mục</a></h5>

